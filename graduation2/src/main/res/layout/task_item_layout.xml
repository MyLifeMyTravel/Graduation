<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:id="@+id/card_view"
                                    android:layout_gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/item_color_bg"
                                    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/clock"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/clockBtn"
                android:src="@drawable/icon_clock"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:text="@string/clock"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_marginBottom="10dp"
            android:id="@+id/task_name"
            android:gravity="center"
            android:text="筱村35kv变电站巡视"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/clock"
            android:layout_toStartOf="@+id/clock"/>

        <TextView
            android:id="@+id/task_type"
            android:layout_below="@+id/task_name"
            android:text="夜间熄灯巡检"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/task_time"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/task_name"
            android:layout_toRightOf="@+id/task_type"
            android:layout_toLeftOf="@+id/clock"
            android:gravity="center"
            android:text="2015-04-17 15:16"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
